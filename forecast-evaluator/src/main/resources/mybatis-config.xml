<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="defaultExecutorType" value="BATCH"/>
        <setting name="autoMappingBehavior" value="PARTIAL"/>
    </settings>

    <typeAliases>
        <typeAlias alias="HourlyAccuracyEntity" type="cz.savic.weatherevaluator.forecastevaluator.persistence.entity.HourlyAccuracyEntity"/>
        <typeAlias alias="DailyAccuracyEntity" type="cz.savic.weatherevaluator.forecastevaluator.persistence.entity.DailyAccuracyEntity"/>
    </typeAliases>

    <mappers>
        <mapper resource="mapper/AccuracyMapper.xml"/>
        <mapper resource="mapper/DataRetrieverMapper.xml"/>
    </mappers>
</configuration>