<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="defaultExecutorType" value="BATCH"/>
        <setting name="autoMappingBehavior" value="PARTIAL"/>
        <setting name="logImpl" value="NO_LOGGING"/>
    </settings>

    <typeAliases>
        <typeAlias alias="HourlyAccuracyEntity" type="cz.savic.weatherevaluator.forecastevaluator.persistence.entity.HourlyAccuracyEntity"/>
        <typeAlias alias="DailyAccuracyEntity" type="cz.savic.weatherevaluator.forecastevaluator.persistence.entity.DailyAccuracyEntity"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mapper/AccuracyMapper.xml"/>
        <mapper resource="mapper/DataRetrieverMapper.xml"/>
    </mappers>
</configuration>